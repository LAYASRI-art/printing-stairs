#include <stdio.h>
int main()
{
    int i,j,n;
    //reading the no of stairs from the user
    printf("Enter the no of stairs:\n");
    scanf("%d",&n);
    //loop for changing the stairs
    for(i=0;i<n;i++)   
    {
       // loop for printing the "01"
       for(j=0;j<=i;j++)
       {
          printf("01");
       }
       printf("\n");
    }

    return 0;
}
